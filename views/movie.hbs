<div class="row" style="background-image: url(/images/{{movie.background}})">
    <div class="col">
        <div class="row">
            <div class="col text-center">
                <h1>{{movie.title}}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
            <iframe width="1080" height="720" src="{{movie.video}}" title="{{movie.title}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>